<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bottom_sheet_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="0dp"
              android:background="@drawable/layout_bg"
              app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_top_btsheet"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
                android:layout_marginLeft="19.3dp"
                android:layout_marginRight="19.1dp"
                app:cardCornerRadius="5.8dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="164.2dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_bt_sheet"
                        android:layout_marginLeft="19.2dp"
                        android:layout_marginTop="20.8dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/cr7" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp">

                    <TextView
                            android:textStyle="bold"
                            android:id="@+id/tv_name_bt_sheet"
                            android:layout_marginTop="19.3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steve Rogers"
                            android:textColor="#323643"
                            android:textSize="13.4sp"/>
                    <TextView
                            android:id="@+id/tv_address_bt_sheet"
                            android:layout_marginTop="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="102 Nguyễn Xí, P13, Quận Bình Thạnh, TPHCM"
                            android:textColor="#323643"
                            android:textSize="11.4sp"/>

                    <RatingBar
                            android:id="@+id/rt_bt_sheet"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:progressTint="#ffba00"
                            android:layout_weight="1"
                            android:isIndicator="false"
                            android:max="100"
                            android:numStars="5"
                            android:minHeight="10dp"
                            android:rating="3"
                            android:stepSize="0.2" />
                </LinearLayout>

                <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="27dp"-->
                        <!--android:background="@drawable/book_button"-->
                        <!--android:text="@string/image"-->
                        <!--android:textSize="15.4sp"-->
                        <!--android:layout_marginRight="8dp"-->
                        <!--android:layout_marginLeft="45dp"-->
                        <!--android:textColor="#fbfbfb"/>-->
            </LinearLayout>


            <View
                    android:layout_marginLeft="19.2dp"
                    android:layout_marginRight="19.2dp"
                    android:layout_marginTop="98.2dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#33979797"/>


            <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brand"
                            android:textColor="#99606470"
                            android:textSize="11.5sp"/>

                    <TextView
                            android:id="@+id/tv_brand_bt_sheet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Klara"
                            android:textSize="11.4sp"
                            android:textColor="#323643"/>

                </LinearLayout>

                <!--<LinearLayout-->
                        <!--android:layout_marginLeft="40dp"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical">-->

                    <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Distance"-->
                            <!--android:textColor="#99606470"-->
                            <!--android:textSize="11.5sp"/>-->

                    <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="4.2 Km"-->
                            <!--android:textSize="11.4sp"-->
                            <!--android:textColor="#323643"/>-->
                <!--</LinearLayout>-->

                <LinearLayout
                        android:layout_marginStart="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="#99606470"
                            android:textSize="11.5sp"/>

                    <TextView
                            android:id="@+id/tv_price_bt_sheet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40.000/h"
                            android:textSize="11.4sp"
                            android:textColor="#323643"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_marginStart="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="#99606470"
                            android:textSize="11.5sp"/>

                    <TextView
                            android:id="@+id/tv_payment_bt_sheet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textSize="11.4sp"
                            android:textColor="#323643"/>
                </LinearLayout>


















            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:textSize="18sp" />-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="2">
            <Button
                    android:id="@+id/btn_call_bt_sheet"
                    android:layout_marginRight="6dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/call_button"
                    android:text="@string/call"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/btn_book_btsheet"
                    android:layout_marginLeft="6dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/book_button"
                    android:text="@string/book"
                    android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>