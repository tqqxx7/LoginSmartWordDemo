<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.EditProfileFragment"
              android:background="@color/outline"
             android:orientation="vertical">

    <include layout="@layout/toolbar_edit_profile"></include>

        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                <FrameLayout android:layout_width="match_parent"
                             android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_edit_profile"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/cr7"
                            android:layout_gravity="center"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_camera2"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="50dp"
                    />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">


                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">
                        <TextView
                                android:layout_marginTop="15dp"
                                android:id="@+id/lb_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/textColor"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:textStyle="bold"/>

                        <TextView
                                android:textColor="@color/textColor"
                                android:id="@+id/edt_email_profile"
                                android:layout_below="@+id/lb_email"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:layout_height="wrap_content"
                                android:text="quantq@gmail.com"
                                android:textSize="16sp"
                                android:backgroundTint="@color/outline"
                                android:focusable="false"
                        />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">


                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">
                        <TextView
                                android:layout_marginTop="15dp"
                                android:id="@+id/label_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name"
                                android:textColor="@color/bg_signin"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:textStyle="bold"/>

                        <EditText
                                android:id="@+id/edt_fullname_profile"
                                android:layout_below="@+id/label_phone"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:layout_height="wrap_content"
                                android:text="Truong Quoc Quan"
                                android:textSize="16sp"
                                android:backgroundTint="@color/outline"

                        />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">


                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">
                        <TextView
                                android:layout_marginTop="15dp"
                                android:id="@+id/lb_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textColor="@color/bg_signin"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:textStyle="bold"/>

                        <EditText
                                android:id="@+id/edt_phone_profile"
                                android:inputType="phone"
                                android:layout_below="@+id/lb_phone"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:layout_height="wrap_content"
                                android:text="0919485930"
                                android:textSize="16sp"
                                android:backgroundTint="@color/outline"
                        />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">


                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">
                        <TextView
                                android:layout_marginTop="15dp"
                                android:id="@+id/lb_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@color/bg_signin"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:textStyle="bold"/>

                            <RelativeLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_below="@+id/lb_address">
                                <TextView
                                        android:maxLines="2"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/edt_address_profile"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:layout_height="wrap_content"
                                        android:text="Santiago the Bernabeu, Spain"
                                        android:textSize="16sp"
                                        android:backgroundTint="@color/outline"
                                        />

                                <ImageView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/img_choose_address"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_map"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="20dp"/>
                            </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <Button

                        android:id="@+id/btn_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_gradient_button"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="40dp"
                        android:textAlignment="center"
                        android:padding="14dp"
                        android:text="@string/update"
                        android:textSize="16dp"
                        android:textColor="#fff"/>
            </LinearLayout>
        </LinearLayout>


</LinearLayout>