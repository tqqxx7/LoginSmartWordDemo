<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="27.7dp"
        android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/toolbar_rating"/>

        <LinearLayout
                android:layout_marginTop="51.3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent Complete"
                    android:textColor="#323643"
                    android:textSize="21.1sp"/>

            <TextView
                    android:id="@+id/tv_rate_name"
                    android:layout_gravity="center"
                    android:layout_marginTop="9.6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15.4sp"
                    android:textColor="#606470"
                    android:text="Rate your last rent with Steve Rogers!"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_ebike_photo"
                    android:layout_marginTop="38.1dp"
                    android:layout_gravity="center"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/cr7" />

            <TextView
                    android:visibility="gone"
                    android:layout_marginTop="19.3dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steve Rogers"
                    android:textColor="#323643"
                    android:textSize="17.3sp"/>


            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/img_1_star"
                            android:tint="@color/textColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"/>
                    <ImageView
                            android:id="@+id/img_2_star"
                            android:tint="@color/textColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"/>
                    <ImageView
                            android:id="@+id/img_3_star"
                            android:tint="@color/textColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"/>
                    <ImageView
                            android:id="@+id/img_4_star"
                            android:tint="@color/textColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"/>
                    <ImageView
                            android:id="@+id/img_5_star"
                            android:tint="@color/textColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star"/>

            </LinearLayout>

            <!--<RatingBar-->
                    <!--android:layout_gravity="center"-->
                    <!--android:id="@+id/rtbHighScore"-->
                    <!--style="?android:attr/ratingBarStyleSmall"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:progressTint="#ffba00"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:isIndicator="false"-->
                    <!--android:max="100"-->
                    <!--android:numStars="5"-->
                    <!--android:minHeight="10dp"-->
                    <!--android:rating="3"-->
                    <!--android:stepSize="0.2" />-->

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="17.7dp"
                    android:background="@drawable/rect"
                    android:layout_marginStart="28.7dp"
                    android:layout_marginEnd="28.9dp"
                    android:padding="12dp">

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mail"/>

                <EditText
                        android:id="@+id/edt_feedback"
                        android:layout_gravity="center_vertical"
                        android:background="#00000000"
                        android:layout_marginLeft="10dp"
                        android:hint="Feedback"
                        android:textColorHint="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
            </LinearLayout>

            <TextView
                    android:id="@+id/btn_submit_feedback"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="19.2dp"
                    android:layout_marginStart="28.7dp"
                    android:layout_marginEnd="28.9dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Submit Feedback"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_gradient_button"
                    android:textColor="#fbfbfb"
                    android:textSize="15.4sp"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">


        <TextView
                android:id="@+id/TextViewSkipFeedback"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip feedback"
                android:textColor="#606470"
                android:textSize="15.4sp"/>

    </LinearLayout>

</RelativeLayout>
